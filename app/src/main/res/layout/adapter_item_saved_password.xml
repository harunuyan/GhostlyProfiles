<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_password_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/view_divider_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="0dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@id/view_divider_red"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_password_name"
        android:text="laerhoadsadven123"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_copy" />

    <View
        android:id="@+id/view_divider_red"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_password_name" />

    <View
        android:id="@+id/view_divider_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/light_green"
        app:layout_constraintEnd_toEndOf="@id/tv_password_name"
        app:layout_constraintStart_toStartOf="@id/tv_password_name"
        app:layout_constraintTop_toBottomOf="@id/tv_password" />

</androidx.constraintlayout.widget.ConstraintLayout>